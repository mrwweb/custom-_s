{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"layout": {
			"contentSize": "43rem",
			"wideSize": "63rem"
		},
		"spacing": {
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
				{
					"name": "1",
					"slug": "10",
					"size": "clamp(.25rem, .78vmin, .375rem)"
				},
				{
					"name": "2",
					"slug": "20",
					"size": "clamp(.325rem, 1.1vmin, .5rem)"
				},
				{
					"name": "3",
					"slug": "30",
					"size": "clamp(.4375rem, 1.43vmin, .75rem)"
				},
				{
					"name": "4",
					"slug": "40",
					"size": "clamp(.6125rem, 1.93vmin, .9375rem)"
				},
				{
					"name": "5",
					"slug": "50",
					"size": "clamp(.825rem, 2.6vmin, 1.25rem)"
				},
				{
					"name": "6",
					"slug": "60",
					"size": "clamp(1.125rem, 3.5vmin, 1.75rem)"
				},
				{
					"name": "7",
					"slug": "70",
					"size": "clamp(1.5rem, 4.75vmin, 2.3125rem)"
				},
				{
					"name": "8",
					"slug": "80",
					"size": "clamp(2rem, 6.4vmin, 3.125rem)"
				},
				{
					"name": "9",
					"slug": "90",
					"size": "clamp(2.75rem, 8.65vmin, 4.125rem)"
				},
				{
					"name": "10",
					"slug": "100",
					"size": "clamp(3.6875rem, 11.68vmin, 5.625rem)"
				}
			]
		},
		"color": {
			"palette": [
				{
					"name": "Primary",
					"slug": "primary",
					"color": ""
				},
				{
					"name": "Secondary",
					"slug": "secondary",
					"color": ""
				},
				{
					"name": "Accent",
					"slug": "accent",
					"color": ""
				},
				{
					"name": "Black",
					"slug": "contrast",
					"color": "#000"
				},
				{
					"name": "Dark Gray",
					"slug": "dark-gray",
					"color": "#444"
				},
				{
					"name": "Gray",
					"slug": "gray",
					"color": "#777"
				},
				{
					"name": "Light Gray",
					"slug": "light-gray",
					"color": "#EFEFEF"
				},
				{
					"name": "White",
					"slug": "base",
					"color": "#fff"
				}
			],
			"gradients": [],
			"customDuotone": false
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "System Fonts",
					"slug": "system",
					"fontFamily": "-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,Oxygen-Sans,Ubuntu,Cantarell,'Helvetica Neue',sans-serif"
				},
				{
					"name": "Monospace",
					"slug": "monospace",
					"fontFamily": "ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace;"
				}
			],
			"fontSizes": [
				{
					"name": "Tiny",
					"slug": "x-small",
					"size": "0.875rem"
				},
				{
					"name": "Small",
					"slug": "small",
					"size": "1.0625rem"
				},
				{
					"name": "Default",
					"slug": "default",
					"size": "1.25rem"
				},
				{
					"name": "Medium",
					"slug": "medium",
					"size": "1.5rem"
				},
				{
					"name": "Large",
					"slug": "large",
					"size": "1.75rem"
				},
				{
					"name": "Extra-Large",
					"slug": "x-large",
					"size": "2.5rem"
				},
				{
					"name": "XXL",
					"slug": "xx-large",
					"size": "3.25rem"
				},
				{
					"name": "XXXL",
					"slug": "xxx-large",
					"size": "4rem"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system)",
			"fontSize": "var(--wp--preset--font-size--default)",
			"lineHeight": "1.4"
		},
		"color": {
			"text": "var(--wp--preset--color--contrast)",
			"background": "var(--wp--preset--color--base)"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--70)"
		},
		"elements": {
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--headings)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"lineHeight": "1.2"					
				}
			},
			"h2": {
				"typography": {
					"textTransform": "uppercase",
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"lineHeight": "1.2"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"lineHeight": "1.3"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--default)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"typography": {
						"textDecoration": "none"
					}
				},
				":active": {
					"typography": {
						"textDecoration": "none"
					}
				}
			},
			"button": {
				"border": {
					"radius": "0"
				},
				"typography": {
					"textDecoration": "none"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--base)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				}
			}
		},
		"blocks": {
			"core/columns": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				},
				"elements": {
					"h2": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--large)",
							"lineHeight": "1.3"
						}
					},
					"h3": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--medium)"
						}
					},
					"h4": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--default)"
						}
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
		{
			"name": "sidebar",
			"title": "Sidebar",
			"area": "sidebar"
		}
	]
}
